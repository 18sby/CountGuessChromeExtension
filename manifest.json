{
  "manifest_version": 3,
  "name": "Count Guess",
  "version": "1.0.0",
  "description": "Interactive counting game with four characters. Track daily counts up to 300 per character.",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  }
}
